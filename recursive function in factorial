#include <stdio.h>
long int factorial(int n) {
    if (n == 0 || n == 1) {    
        return 1;
    } else {                   
        return n * factorial(n - 1);
    }
}

int main() {
    int num;
    long int fact;

    printf("Enter a non-negative integer: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("Factorial of a negative number is not defined.\n");
    } else {
        fact = factorial(num);
        printf("Factorial of %d = %ld\n", num, fact);
    }

    return 0;
}
