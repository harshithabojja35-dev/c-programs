#include <stdio.h>
void printArray(int a[], int n) {
    int i;
    for (i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");
}
void bubbleSort(int a[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            if (a[j] > a[j + 1]) {
                            temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }
}
void selectionSort(int a[], int n) {
    int i, j, minIndex, temp;
    for (i = 0; i < n - 1; i++) {
        minIndex = i; 
        for (j = i + 1; j < n; j++) {
            if (a[j] < a[minIndex]) {
                minIndex = j;
            }
        }
           temp = a[i];
        a[i] = a[minIndex];
        a[minIndex] = temp;
    }
}
int main() {
    int n, i;
    int arr1[100], arr2[100];
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr1[i]);
        arr2[i] = arr1[i]; 
    }
        bubbleSort(arr1, n);
    printf("Array after Bubble Sort:\n");
    printArray(arr1, n);
    
    selectionSort(arr2, n);
    printf("Array after Selection Sort:\n");
    printArray(arr2, n);

    return 0;
}
